<Window x:Class="MyWebBrowser.Setting.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MyWebBrowser.Setting"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="Settings"
        Width="520" Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Margin="18,18,18,0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Cài đặt" FontWeight="Bold" FontSize="17" VerticalAlignment="Center"/>
                <Button Content="✕" Width="28" Height="28" FontSize="16" FontWeight="Bold"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#43B370" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"
                        Click="CloseBtn_Click"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="14,12,14,12" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="4">

                    <!-- Default download folder -->
                    <TextBlock Text="Default download folder" FontWeight="SemiBold" FontSize="14" Margin="4,4,0,6"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DownloadFolderTextBox" Height="28" VerticalContentAlignment="Center" />
                        <Button Grid.Column="1" Background="Transparent" Content="Browse" Margin="8,0,0,0" Padding="12,2" Height="28" Click="BrowseFolder_Click"/>
                    </Grid>
                    <CheckBox x:Name="AskEachTimeCheckBox" Content="Ask each time before downloading" Margin="4,0,0,10"/>

                    <Separator Margin="0,6"/>

                    <!-- Theme -->
                    <TextBlock Text="Theme" FontWeight="SemiBold" FontSize="14" Margin="4,6,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="4,0,0,10">
                        <RadioButton x:Name="ThemeLightRadio" Content="Light" GroupName="Theme" Margin="0,0,12,0"/>
                        <RadioButton x:Name="ThemeDarkRadio" Content="Dark" GroupName="Theme"/>
                    </StackPanel>

                    <Separator Margin="0,6"/>

                    <!-- Zoom -->
                    <TextBlock Text="Default Zoom" FontWeight="SemiBold" FontSize="14" Margin="4,6,0,6"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0,0,0">
                        <Button Background="Transparent" x:Name="ZoomOutBtn" Content="-" Width="36" Height="30" Click="ZoomOutBtn_Click"/>
                        <Slider x:Name="ZoomSlider" Minimum="50" Maximum="200" Value="100" Width="322" Margin="8,0" TickFrequency="10" IsSnapToTickEnabled="true" ValueChanged="ZoomSlider_ValueChanged"/>
                        <Button Background="Transparent"  x:Name="ZoomInBtn" Content="+" Width="36" Height="30" Click="ZoomInBtn_Click"/>
                        <TextBlock x:Name="ZoomPercentText" Text="100%" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,16,12">
                <Button Content="Cancel" Width="90" Height="30" Margin="0,0,8,0" Click="CancelBtn_Click"/>
                <Button Content="Save" Width="90" Height="30" Background="#43B370" Foreground="White" Click="SaveBtn_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>