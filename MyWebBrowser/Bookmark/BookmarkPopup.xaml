<Window x:Class="MyWebBrowser.BookmarkPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đã lưu"
        Width="600" Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Deactivated="Window_Deactivated">
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Grid Margin="20,18,15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Icon/bookmark.png" Width="24" Height="24" Grid.Column="0"/>
                    <TextBlock Text="Bookmark Saved" FontWeight="Bold" FontSize="18" Margin="8,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                    <TextBlock Text="Ctrl+B" FontSize="13" Foreground="#888" VerticalAlignment="Center" Grid.Column="2" Margin="0,0,4,0"/>
                </Grid>
                <Separator Margin="0,12,0,0"/>
                <ItemsControl ItemsSource="{Binding Bookmarks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" CornerRadius="5" Padding="6,4" Margin="3"
                    MouseLeftButtonUp="BookmarkItem_Click"
                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E3E7EF"/>
                                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <!-- ContextMenu & Content giữ nguyên -->
                                <Border.ContextMenu>
                                    <ContextMenu Background="White">
                                        <MenuItem Header="Xóa" Click="DeleteBookmarkItem_Click" />
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding IconUrl}" Width="21" Height="21"/>
                                    <StackPanel Margin="8,0,0,0">
                                        <TextBlock Text="{Binding Title}" FontSize="14" Foreground="#222" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Url}" FontSize="11" Foreground="#888" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>