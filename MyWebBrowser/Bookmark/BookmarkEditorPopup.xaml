<Window x:Class="MyWebBrowser.BookmarkEditorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyWebBrowser"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="New Bookmark"
        Width="420" Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="18,19,0,0" Height="37">
                <Border Background="Transparent" Width="36" Height="37" CornerRadius="8" HorizontalAlignment="Left" Margin="-5,0,0,0">
                    <Image Source="{Binding IconUrl}" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,14,18,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Edit Bookmark" FontWeight="Bold" FontSize="17"/>
                    <Button Content="✕" Width="28" Height="28" FontSize="16" FontWeight="Bold" Background="Transparent" BorderThickness="0"
                            Foreground="#888" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"
                            Click="CloseBtn_Click"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                    <TextBlock Text="Name:" FontSize="14" Foreground="#222" Width="64" VerticalAlignment="Center"/>
                    <TextBox x:Name="TitleBox" Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14"
                             Width="224" Height="26" Margin="8,0,0,0"
                             BorderBrush="#888" BorderThickness="1" Background="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                    <TextBlock Text="Type:" FontSize="14" Foreground="#222" Width="72" VerticalAlignment="Center"/>
                    <ComboBox x:Name="FolderCombo" Width="225" Height="25"
                              BorderThickness="1" Background="Transparent"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Work" Background="Transparent"/>
                        <ComboBoxItem Content="Social" Background="Transparent"/>
                        <ComboBoxItem Content="Entertainment" Background="Transparent"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                    <Button Content="Done" Width="80" Height="32" FontWeight="SemiBold" FontSize="15"
                            Foreground="White" Background="#43B370" BorderThickness="0" Margin="0,0,100,0" Cursor="Hand"
                            Click="DoneBtn_Click"/>
                    <Button Content="Delete" Width="80" Height="32" FontWeight="SemiBold" FontSize="15"
                            Foreground="#222" Background="#E8E8E8" BorderThickness="0" Cursor="Hand"
                            Click="DeleteBtn_Click" Margin="0,0,65,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>