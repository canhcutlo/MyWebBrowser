<Window x:Class="MyWebBrowser.HistoryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử"
        Width="800" Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Deactivated="Window_Deactivated">
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Lịch sử tab hiện tại -->
            <Border  CornerRadius="8" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <Grid Margin="20,18,15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Icon/history.png" Width="24" Height="24" Grid.Column="0"/>
                            <TextBlock Text="Lịch sử tab hiện tại" FontWeight="Bold" FontSize="18" Margin="8,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        </Grid>
                        <Separator Margin="0,12,0,0"/>
                        <ItemsControl ItemsSource="{Binding CurrentTabHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" CornerRadius="5" Padding="6,4" Margin="3"
                    MouseLeftButtonUp="HistoryItem_Click"
                    Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3E7EF"/>
                                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <!-- ContextMenu & Content giữ nguyên -->
                                        <Border.ContextMenu>
                                            <ContextMenu Background="White">
                                                <MenuItem Header="Delete" Click="DeleteCurrentTabHistoryItem_Click" FontSize="14" />
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding IconUrl}" Width="21" Height="21"/>
                                            <StackPanel Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Title}" FontSize="14" Foreground="#222" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Description}" FontSize="14" Foreground="#888" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <GridSplitter Width="1" HorizontalAlignment="Left" Background="#E0E0E0" ShowsPreview="True" Grid.Column="0" Margin="398,0,0,0"/>
            <!-- Lịch sử chung -->
            <Border  CornerRadius="8" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <Grid Margin="20,18,15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Icon/history.png" Width="24" Height="24" Grid.Column="0"/>
                            <TextBlock Text="Lịch sử chung" FontWeight="Bold" FontSize="18" Margin="8,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        </Grid>
                        <Separator Margin="0,12,0,0"/>
                        <ItemsControl ItemsSource="{Binding GlobalHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" CornerRadius="5" Padding="6,4" Margin="3"
                    MouseLeftButtonUp="HistoryItem_Click"
                    Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3E7EF"/>
                                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <!-- ContextMenu & Content giữ nguyên -->
                                        <Border.ContextMenu>
                                            <ContextMenu Background="White">
                                                <MenuItem Header="Delete" Click="DeleteGlobalHistoryItem_Click">
                                                    <MenuItem.Style>
                                                        <Style TargetType="MenuItem">
                                                            <Setter Property="FontSize" Value="14"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </MenuItem.Style>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Delete All" Click="DeleteAllGlobalHistory_Click">
                                                    <MenuItem.Style>
                                                        <Style TargetType="MenuItem">
                                                            <Setter Property="FontSize" Value="14"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </MenuItem.Style>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding IconUrl}" Width="21" Height="21"/>
                                            <StackPanel Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Title}" FontSize="14" Foreground="#222" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#888" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>