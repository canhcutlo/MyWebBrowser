<Window x:Class="MyWebBrowser.DownloadedPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyWebBrowser"
        Title="Nhật ký tải xuống gần đây"
        Width="400" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>
        <local:SizeConverter x:Key="SizeConverter"/>
        <local:TimeAgoConverter x:Key="TimeAgoConverter"/>
    </Window.Resources>
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Margin="18,18,18,0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nhật ký tải xuống gần đây" FontWeight="Bold" FontSize="17" VerticalAlignment="Center"/>
                <Button Content="✕" Width="28" Height="28" FontSize="16" FontWeight="Bold"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#43B370" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"
                        Click="CloseBtn_Click"/>
            </Grid>
            <!-- Lịch sử tải xuống -->
            <ScrollViewer Grid.Row="1" Margin="0,14,0,0" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="HistoryList" ItemsSource="{Binding DownloadHistory}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8,0,8,14" Padding="8" Background="#FCFCFC" CornerRadius="7">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="36"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="/Downloaded/file.png" Width="32" Height="32" Margin="0,0,8,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="15"/>
                                        <TextBlock Text="{Binding FilePath}" FontSize="12" Foreground="#888" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding FileSize, Converter={StaticResource SizeConverter}}" Foreground="#666" FontSize="13"/>
                                            <TextBlock Text=" • " Foreground="#999" FontSize="13" Margin="4,0"/>
                                            <TextBlock Text="{Binding DownloadedAt, Converter={StaticResource TimeAgoConverter}}" Foreground="#666" FontSize="13"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="Open file" Padding="12,2" Height="30"
                                            Margin="8,0,0,0" FontSize="13"
                                            Background="#43B370" Foreground="White"
                                            BorderThickness="0" Cursor="Hand"
                                            Tag="{Binding FilePath}"
                                            Click="OpenFile_Click"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>