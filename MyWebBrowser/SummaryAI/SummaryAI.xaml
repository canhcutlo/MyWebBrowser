<Window x:Class="MyWebBrowser.SummaryAI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tóm tắt AI"
        Width="700" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Deactivated="Window_Deactivated">
    <Border CornerRadius="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <Grid Margin="20,18,15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Kết quả tóm tắt AI" FontWeight="Bold" FontSize="18" Margin="24,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        <Image Source="/SummaryAI/MainCharacter.png" Width="50" Height="50" Grid.Column="0"/>
                        <Button Content="✕" Width="28" Height="28" FontSize="16" FontWeight="Bold" Background="Transparent" BorderThickness="0"
        Foreground="#888" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"
        Click="CloseBtn_Click"/>
                    </Grid>
                    <Separator Margin="0,12,0,0"/>

                    <ItemsControl ItemsSource="{Binding Summaries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" CornerRadius="5" Padding="10,8" Margin="6"
                                        BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="Bold" Foreground="#1976D2" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Content}" FontSize="15" Foreground="#333" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Summary}" FontSize="16" Foreground="#222" TextWrapping="Wrap" Margin="10"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>